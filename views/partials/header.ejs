<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= typeof title !== 'undefined' ? title : 'Restaurant SaaS' %></title>
    <link rel="stylesheet" href="/css/style.css">
</head>
<body>
    <header>
        <nav>
            <div class="container">
                <div class="nav-brand">
                    <% if (typeof restaurant !== 'undefined' && restaurant) { %>
                        <h1><%= restaurant.name %></h1>
                    <% } else { %>
                        <h1>Restaurant SaaS</h1>
                    <% } %>
                </div>
                <div class="nav-menu">
                    <% if (typeof user !== 'undefined' && user) { %>
                        <span>Welcome, <%= user.name %></span>
                        <% if (user.role === 'superadmin') { %>
                            <a href="/superadmin/dashboard">Dashboard</a>
                            <a href="/superadmin/restaurants">Restaurants</a>
                        <% } else if (user.role === 'admin') { %>
                            <a href="/admin/dashboard">Dashboard</a>
                            <a href="/admin/menu-items">Menu</a>
                            <a href="/admin/tables">Tables</a>
                            <a href="/admin/staff">Staff</a>
                            <a href="/admin/orders">Orders</a>
                        <% } else if (user.role === 'staff') { %>
                            <a href="/staff/dashboard">Dashboard</a>
                            <a href="/staff/orders">Orders</a>
                        <% } %>
                        <a href="/auth/logout">Logout</a>
                    <% } else if (typeof customer !== 'undefined' && customer) { %>
                        <span>Phone: <%= customer.phone %></span>
                        <a href="/auth/logout">Logout</a>
                    <% } %>
                </div>
            </div>
        </nav>
    </header>

    <main class="container">
        <% if (typeof success !== 'undefined' && success) { %>
            <div class="alert alert-success"><%= success %></div>
        <% } %>
        <% if (typeof error !== 'undefined' && error) { %>
            <div class="alert alert-error"><%= error %></div>
        <% } %>