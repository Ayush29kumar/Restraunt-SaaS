<%- include('../partials/header') %>

<div class="create-restaurant">
    <h2>Create New Restaurant</h2>

    <% if (typeof error !== 'undefined' && error) { %>
        <div class="alert alert-error"><%= error %></div>
    <% } %>

    <form method="POST" action="/superadmin/restaurants/create" data-validate>
        <div class="form-group">
            <label for="name">Restaurant Name *</label>
            <input type="text" id="name" name="name" required
                   value="<%= typeof formData !== 'undefined' ? formData.name : '' %>"
                   placeholder="e.g., The Italian Kitchen">
        </div>

        <div class="form-group">
            <label for="subdomain">Subdomain *</label>
            <input type="text" id="subdomain" name="subdomain" required
                   value="<%= typeof formData !== 'undefined' ? formData.subdomain : '' %>"
                   pattern="[a-z0-9-]+"
                   placeholder="e.g., italian-kitchen">
            <small>Only lowercase letters, numbers, and hyphens allowed</small>
        </div>

        <div class="form-group">
            <label for="address">Address</label>
            <input type="text" id="address" name="address"
                   value="<%= typeof formData !== 'undefined' ? formData.address : '' %>"
                   placeholder="123 Main Street, City">
        </div>

        <div class="form-group">
            <label for="phone">Phone</label>
            <input type="tel" id="phone" name="phone"
                   value="<%= typeof formData !== 'undefined' ? formData.phone : '' %>"
                   placeholder="+1 234-567-8900">
        </div>

        <div class="form-group">
            <label for="email">Restaurant Email</label>
            <input type="email" id="email" name="email"
                   value="<%= typeof formData !== 'undefined' ? formData.email : '' %>"
                   placeholder="info@restaurant.com">
        </div>

        <hr>
        <h3>Restaurant Admin Account</h3>

        <div class="form-group">
            <label for="adminUsername">Admin Username *</label>
            <input type="text" id="adminUsername" name="adminUsername" required
                   value="<%= typeof formData !== 'undefined' ? formData.adminUsername : '' %>"
                   placeholder="admin_username">
        </div>

        <div class="form-group">
            <label for="adminPassword">Admin Password *</label>
            <input type="password" id="adminPassword" name="adminPassword" required
                   minlength="6"
                   placeholder="Minimum 6 characters">
        </div>

        <div class="form-group">
            <label for="adminName">Admin Full Name *</label>
            <input type="text" id="adminName" name="adminName" required
                   value="<%= typeof formData !== 'undefined' ? formData.adminName : '' %>"
                   placeholder="John Doe">
        </div>

        <div class="form-group">
            <label for="adminEmail">Admin Email *</label>
            <input type="email" id="adminEmail" name="adminEmail" required
                   value="<%= typeof formData !== 'undefined' ? formData.adminEmail : '' %>"
                   placeholder="admin@restaurant.com">
        </div>

        <div class="form-actions">
            <button type="submit" class="btn btn-primary">Create Restaurant</button>
            <a href="/superadmin/restaurants" class="btn btn-secondary">Cancel</a>
        </div>
    </form>
</div>

<%- include('../partials/footer') %>